<% provide(:title, "WorkDay") %>
<div class="row">
  <div class="col-sm-4">
    
    <div class="panel panel-default text-center">
      <div class="panel-heading">
        <h1><%= @workday.title+@workday.workday_type[0] %></h1>
        <button class="btn btn-lg"><%= link_to 'Edit', edit_workday_path(@workday) %></button>
        <button class="btn btn-lg"><%= link_to 'Delete', workday_path(@workday), method: :delete, data: { confirm: 'Are you sure?' } %></button>   
      </div>
      <div class="panel-body">
    		<p><strong>Complete:<%= @workday.complete %></strong></p>
      </div>
    </div>
    <hr class="extra-margins my-5">
    <div class="Route">
      <%= content_tag :span, "#{@workday.title}(#{@workday.workday_type[0]}) Notes", class: "route-title" %>
    </div>
    <div id="notes">
      <%= render @workday.notes %>
    </div> 
    <hr class="extra-margins my-5">
    <div>
      <%= form_for([@workday, @workday.notes.new]) do |f| %>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :note %><br>
          <%= f.text_field :note, size:"45x10" %>
        </div>
        <div class="actions">
          <%= f.submit "Add New Note"%>
        </div>
      <% end %> 
    </div>

  </div>

  <div class="col-lg-8">
    <div class="jumbotron">
      <% @building.each do |b| %>
        <div class="panel panel-default text-center">
          <div class="panel-heading">
            <h3><%= b.building_number %></h3><%= link_to b.building_name, [@workday, b] %>
          </div> 
          <div class="panel-body">
            <p><strong></strong></p>
            <p><strong><%= b.building_address %></strong></p>
          </div> 
          <div class="panel-footer">
            <button class="btn btn-sm"><%= will_paginate @building, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, :page_links => false %></button>
          </div>          
        </div>    
      <% end %>   
    </div>



  </div>

</div>



