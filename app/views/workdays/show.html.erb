<% provide(:title, "WorkDay") %>
<div class="row">
  <div class="col-sm-4">
    
    <div class="panel panel-default text-center">
      <div class="panel-heading">
        <h1><%= @workday.title+@workday.workday_type[0] %></h1>
        <button class="btn btn-lg"><%= link_to 'Back', workdays_path %></button>
        <button class="btn btn-lg"><%= link_to 'Edit', edit_workday_path(@workday) %></button>
        <button class="btn btn-lg"><%= link_to 'Destroy',workday_path(@workday), method: :delete, data: { confirm: 'Are you sure?' } %></button>   
      </div>
      <div class="panel-body">
    		<p>
    		  <strong>Complete:<%= @workday.complete %></strong>
    		</p>
      </div>
    </div>
    <hr class="extra-margins my-5">
    <div class="Route">
      <%= content_tag :span, "#{@workday.title}(#{@workday.workday_type[0]}) Notes", class: "route-title" %>
    </div>
    <div id="notes">
      <%= render @workday.notes %>
    </div> 
    <hr class="extra-margins my-5">
    <div>
      <%= form_for([@workday, @workday.notes.new]) do |f| %>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :note %><br>
          <%= f.text_field :note, size:"45x10" %>
        </div>
        <div class="actions">
          <%= f.submit "Add New Note"%>
        </div>
      <% end %> 
    </div>

  </div>

  <div class="col-lg-8">
    <table class="table table-striped table-bordered table-hover table-responsive">
      <thead>
        <tr>
          <th>Building Number</th>
          <th>Building Name</th>
          <th>Building Address</th>
          <th>Complete</th>
        </tr>
      </thead>

      <tbody>
        <% @workday.buildings.each do |b| %>
        <tr>
          <td><%= link_to b.building_number, [@workday, b] %></td>      
          <td><%= b.building_name %></td>
          <td><%= b.building_address %></td>
          <td><%= b.complete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>