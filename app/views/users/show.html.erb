<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= link_to @user.name, current_user %>  
      </h1>        
      <h2>
        <% if admin? %>
          <li><%= link_to "WorkDay", workdays_path %></li>
        <% end %>
      </h2>
    </section>
  </aside>
</div>