<% provide(:title, "Building") %>
<div class="row">
  
  <div class="col-sm-4">
    
    <div class="panel panel-default text-center">
      <div class="panel-heading">
        <h1><%= @building.building_name %></h1>
        <button class="btn btn-lg"><%= link_to 'Edit', edit_workday_building_path(@workday) %></button>  
      </div>
      <div class="panel-body">
    		<p><strong>Complete:<%= @workday.complete %></strong></p>
      </div>
    </div>

  </div>

  <div class="col-lg-8">
    
    <div class="jumbotron">
      <% @meter.each do |m| %>
        <div class="panel panel-default text-center">
          <div class="panel-heading">
            <%= m.meter_number %>
          </div>                                          
          <div class="panel-body">
            <div class="col-sm-4">
              
            </div>
          </div> 
          <div class="panel-footer">
            <button class="btn btn-sm"><%= will_paginate @meter, :page_links => false %></button><br>
          </div>          
        </div>  
      <% end %>   
    </div>

  </div>

</div>  



