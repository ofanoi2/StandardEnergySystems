<% provide(:title, "Building") %>
<div class="row">
  
  <div class="col-sm-4">
    
    <div class="panel panel-default text-center">
      <div class="panel-heading">
        <h1><%= @building.building_name %></h1>
        <button class="btn btn-lg"><%= link_to 'Edit', edit_workday_building_path(@workday) %></button>  
        <% @v_page = (@page.index(@building.building_number)+1)+1 %>
        <button class="btn btn-lg"><%= link_to 'Back', "/workdays/#{@building.workday_id}?page=#{@v_page}"  %></button>
      </div>
      <div class="panel-body">
    		<p><strong>Complete:<%= @workday.complete %></strong></p>
      </div>
    </div>

  </div>

  <div class="col-lg-8">
    
    <div class="jumbotron">
      <% @meter_number.uniq.each do |m| %>
        <% %>
        <div class="panel panel-default text-center">
          <div class="panel-heading">
            <h3><%= m %></h3><button class="btn btn-sm"><%=link_to 'Enter Read', building_meter_path(@building,@id) %></button>
          </div>                                          
          <div class="panel-body">
            <h3>meter is located: <%= @meter_location[0] =%></h3>
          </div> 
          <div class="panel-footer">
            <button class="btn btn-sm"><%= will_paginate @meter_number, :page_links => false %></button><br>
          </div>          
        </div>  
      <% end %>   
    </div>

  </div>

</div>  

